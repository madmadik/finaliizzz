<Page x:Class="Finallllllll.Menu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Finallllllll"
      mc:Ignorable="d" 
      d:DesignHeight="300"
      Height="380" Width="525">
    <Grid Background="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="258*"/>
            <ColumnDefinition Width="259*"/>
        </Grid.ColumnDefinitions>
        <Button Grid.ColumnSpan="3" Name="buton" Content="Общая статистика" HorizontalAlignment="Left" Margin="158,80,0,0" VerticalAlignment="Top" Width="201" Height="25" Click="Button_Stat"/>
        <Button Grid.ColumnSpan="3" Content="Топ 20" HorizontalAlignment="Left" Margin="158,129,0,0" VerticalAlignment="Top" Width="201" Height="25" Click="Button_Top" Background="#FFB73A3A" BorderBrush="#FF736D80"/>
        <TextBlock Grid.ColumnSpan="3" Name="LastData" HorizontalAlignment="Left" Visibility="Visible" Margin="107,186,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Height="96" Width="308" Text="{Binding text}"  Background="{DynamicResource {x:Static SystemColors.InactiveSelectionHighlightBrushKey}}"/>
    </Grid>
</Page>
